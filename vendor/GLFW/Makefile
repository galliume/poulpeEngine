ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq (.exe,$(findstring .exe,$(ComSpec)))
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

RESCOMP = windres
DEFINES += -D_GLFW_WAYLAND
INCLUDES +=
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -std=c11
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -std=c11
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LIBS += -ldl -lpthread
LDDEPS +=
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64 -s
LINKCMD = $(AR) -rcs "$@" $(OBJECTS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug)
TARGETDIR = bin/Debug-linux-x86_64/GLFW
TARGET = $(TARGETDIR)/libGLFW.a
OBJDIR = bin-int/Debug-linux-x86_64/GLFW

else ifeq ($(config),release)
TARGETDIR = bin/Release-linux-x86_64/GLFW
TARGET = $(TARGETDIR)/libGLFW.a
OBJDIR = bin-int/Release-linux-x86_64/GLFW

else ifeq ($(config),dist)
TARGETDIR = bin/Dist-linux-x86_64/GLFW
TARGET = $(TARGETDIR)/libGLFW.a
OBJDIR = bin-int/Dist-linux-x86_64/GLFW

endif

