{
  "version": 8,
  "include": [
    "CMakeHiddenPresets.json"
  ],
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-debug",
      "displayName": "Debug",
      "description": "Windows Debug",
      "inherits": [
        "windows-common",
        "DEBUG_BUILD_TYPE",
        "DEBUG_CMAKE_C_FLAGS",
        "DEBUG_CMAKE_CXX_FLAGS"
      ] 
    },
    {
      "name": "windows-release",
      "displayName": "Release",
      "description": "Windows Release",
      "inherits": [
        "windows-common",
        "RELEASE_BUILD_TYPE"
      ]
    },
    {
      "name": "linux-debug",
      "displayName": "Debug",
      "description": "Linux Debug",
      "inherits": [
        "linux-common",
        "DEBUG_BUILD_TYPE",
        "DEBUG_CMAKE_C_FLAGS",
        "DEBUG_CMAKE_CXX_FLAGS"
      ]
    },
    {
      "name": "linux-release",
      "displayName": "Release",
      "description": "Linux Release",
      "inherits": [
        "linux-common",
        "RELEASE_BUILD_TYPE"
      ]
    }
  ],
   "buildPresets": [
    {
      "name": "windows-debug",
      "displayName": "Debug",
      "configurePreset": "windows-debug"
    },
    {
      "name": "windows-release",
      "displayName": "Release",
      "configurePreset": "windows-release"
    },
    {
      "name": "linux-debug",
      "displayName": "Debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "displayName": "Release",
      "configurePreset": "linux-release"
    }
  ]
}