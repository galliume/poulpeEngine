{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "(lldb) Start",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${input:compiler}/PoulpeEngine.exe",
            "cwd": "${workspaceFolder}",
            "relativePathBase": "${workspaceFolder}",
            "console": "externalTerminal"
        }
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "compiler",
          "description": "Compiler/build to be used",
          "options": [
            "windows-debug",
            "windows-release",
            "windows-release-with-debug",
            "linux-debug",
            "linux-release",
            "linux-release-with-debug",
        ],
          "default": "windows-debug"
        },
      ]
}