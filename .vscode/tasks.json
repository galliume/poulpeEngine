{
    "version": "2.0.0",
    "tasks": [
    {
        "label": "CMake Build",
        "type": "shell",
        "command": "cmake --build --preset ${input:compiler}",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": []
    }
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "compiler",
          "description": "Compiler/build to be used",
          "options": [
            "windows-debug",
            "windows-release",
            "windows-release-dbg",
            "linux-debug",
            "linux-release",
            "linux-release-dbg",
        ],
          "default": "windows-debug"
        },
      ]
}